{
  "name": "konshuu",
  "version": "0.0.1",
  "description": "Weekly planner for your work and personal todos.",
  "private": true,
  "type": "module",
  "main": "src/server/konshuu-server.ts",
  "scripts": {
    "build:prod": "npm run build-server:prod && npm run build-static:prod",
    "build-static:prod": "./static-prebuild.sh && vite build",
    "build-static:dev": "./static-prebuild.sh && vite",
    "build-server:prod": "tsc",
    "build-server:dev": "tsc --watch",
    "lint-server:prod": "eslint 'src/server/**/*.ts' && tsc --noEmit",
    "lint-static:dev": "svelte-check --watch",
    "lint-static:prod": "eslint 'src/static/**/*.{js,ts,svelte}' && svelte-check",
    "dev": "nodemon --watch dist --inspect=0.0.0.0 dist/server/app.js",
    "style:write": "prettier --write .",
    "style:check": "prettier --check . --loglevel warn",
    "test": "npm run style:check && npm run lint-static:prod && npm run lint-server:prod",
    "prepare": "husky install"
  },
  "author": "sheodox",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@prisma/client": "^4.9.0",
    "bcrypt": "^5.1.0",
    "connect-redis": "^6.1.3",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "nanoid": "^4.0.0",
    "onaji": "^0.1.3",
    "page": "^1.11.6",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg": "^8.9.0",
    "prom-client": "^14.1.1",
    "pug": "^3.0.2",
    "redis": "^4.6.2",
    "sass": "^1.57.1",
    "serialize-javascript": "^6.0.1",
    "sheodox-ui": "^0.19.3",
    "socket.io": "^4.2.0",
    "socket.io-client": "^4.5.4",
    "svelte": "^3.55.1",
    "ts-node": "^10.9.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "@tsconfig/svelte": "^3.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/connect-redis": "^0.0.19",
    "@types/express": "^4.17.16",
    "@types/express-session": "^1.17.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/page": "^1.11.5",
    "@types/passport": "^1.0.11",
    "@types/passport-local": "^1.0.35",
    "@types/serialize-javascript": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "prettier-plugin-svelte": "^2.9.0",
    "prisma": "^4.9.0",
    "svelte-check": "^3.0.3",
    "svelte-preprocess": "^5.0.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  }
}
